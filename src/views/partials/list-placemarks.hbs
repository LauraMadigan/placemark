<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Placemark</th>
      <th>County</th>
      <th>Locality</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Description</th>
      <th>Monument Class</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each collection.placemarks}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{county}}
        </td>
        <td>
          {{locality}}
        </td>
        <td>
          {{latitude}}
        </td>
        <td>
          {{longitude}}
        </td>
        <td>
          <textarea name="description" id="description">{{description}}</textarea>
        </td>
        <td>
          {{monument_class}}
        </td>
        <td>
          <a href="/collection/{{../collection._id}}/removePlacemark/{{_id}}" class="button">
            <span class="icon is-small">
              <i class="fas fa-trash"></i>
            </span>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>