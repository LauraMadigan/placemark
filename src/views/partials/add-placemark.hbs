<form class="box" action="/collection/{{collection._id}}/addplacemark" method="POST">
  <label>Enter Placemark Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter name of placemark" name="name">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter county" name="county">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter locality" name="locality">
      </div>
      <div class="field">
        <input class="input" type="number" step="0.01" placeholder="Enter latitude" name="latitude">
      </div>
      <div class="field">
        <input class="input" type="number" step="0.01" placeholder="Enter longitude" name="longitude">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter description" name="description">
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter monument class" name="monument_class">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Placemark</button>
</form>