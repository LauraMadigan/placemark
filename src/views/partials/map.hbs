<div id="map"></div>
<script>
  var map = L.map('map').setView([53.43333, -7.95], 7); // Center map on Athlone

L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
}).addTo(map);

{{#each collection.placemarks}}
  L.marker([{{this.latitude}}, {{this.longitude}}]).addTo(map)
    .bindPopup('<b>Name: </b><span>{{this.name}}</span><br/><b>County: </b><span>{{this.county}}</span><br/><b>Monument Class: </b><span>{{this.monument_class}}</span><br/>')
    .openPopup();
{{/each}}

</script>